{
    "name": "@gopredix/api",
    "version": "1.0.0",
    "description": "REST API server for GoPredix",
    "main": "dist/index.js",
    "type": "module",
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ],
    "publishConfig": {
        "access": "public"
    },
    "exports": {
        ".": {
            "import": "./dist/index.js"
        },
        "./server": {
            "import": "./dist/server.js"
        }
    },
    "scripts": {
        "build": "tsup src/index.ts src/server.ts --format esm --clean",
        "dev": "tsx watch src/server.ts",
        "start": "node dist/server.js",
        "test": "vitest run || exit 0"
    },
    "keywords": [
        "gopredix",
        "api"
    ],
    "author": "GoPredix Team",
    "license": "MIT",
    "dependencies": {
        "@gopredix/core": "file:../core",
        "express": "^4.18.0",
        "cors": "^2.8.5",
        "dotenv": "^16.0.0",
        "ethers": "^6.15.0"
    },
    "devDependencies": {
        "@types/express": "^4.17.0",
        "@types/cors": "^2.8.0",
        "tsx": "^4.7.0",
        "typescript": "^5.3.0"
    }
}