{
    "name": "gopredix-sdk",
    "version": "1.0.0",
    "private": true,
    "description": "GoPredix Prediction Market SDK - Monorepo",
    "workspaces": [
        "packages/*",
        "examples/*"
    ],
    "scripts": {
        "build": "npm run build --workspaces",
        "test": "npm run test --workspaces",
        "dev": "npm run dev --workspaces --if-present",
        "clean": "npm run clean --workspaces --if-present",
        "publish:all": "npm run publish --workspaces"
    },
    "keywords": [
        "gopredix",
        "prediction-market",
        "sdk",
        "blockchain",
        "bnb",
        "web3"
    ],
    "author": "GoPredix Team",
    "license": "MIT",
    "devDependencies": {
        "@types/node": "^20.10.0",
        "typescript": "^5.3.0",
        "tsup": "^8.0.0",
        "vitest": "^1.0.0"
    }
}